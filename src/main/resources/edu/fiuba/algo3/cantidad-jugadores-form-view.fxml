<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.StackPane?>


<?import java.net.URL?>
<StackPane fx:id="mainPane" xmlns="http://javafx.com/javafx"
           xmlns:fx="http://javafx.com/fxml"
           fx:controller="edu.fiuba.algo3.controller.CantidadJugadoresFormController" style="-fx-background-color: #D2B48C;"
>

    <stylesheets>
        <URL value="@myStyle.css" />
    </stylesheets>

    <VBox spacing="50" alignment="CENTER" styleClass="fondo-scene">
        <Label text="GLADIATORS" style="-fx-font-size: 30; -fx-font-weight: BOLD" textFill="antiquewhite"/>

        <VBox spacing="10" alignment="CENTER">
            <Label text="INGRESE LA CANTIDAD DE JUGADORES" style="-fx-font-size: 16;" textFill="saddlebrown"/>
            <TextField fx:id="cantidadJugadoresTextField" styleClass="cantidadDeJugadoresTextField" promptText="Cantidad"/>
        </VBox>

        <Button fx:id="botonContinuar" text="CONTINUAR" style="-fx-background-color: #8B4513; -fx-text-fill: white;" onAction="#continuarButtonAction"/>
    </VBox>

</StackPane>