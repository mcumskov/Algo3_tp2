  + Application():
  - userAgentStylesheet: String
  - hostServices: HostServices
  + STYLESHEET_CASPIAN: String
  + STYLESHEET_MODENA: String
  + stop(): void
  + launch(Class<Application>, String[]?): void
  + init(): void
  + getParameters(): Parameters
  + launch(String[]?): void
